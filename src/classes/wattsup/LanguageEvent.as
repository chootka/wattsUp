package wattsup{	import flash.events.Event;	/**	*	CMHEvent - currently contains one property: the _params object	*	aParams: object containing whatever info you want to send with this event	*		*	usage: dispatchEvent(new LanguageEvent(eventType, "english"))	*/	public class LanguageEvent extends Event {		// constants of the various CMH event types		public static const LANGUAGE_CHANGE = "language_change";		private var _language:String;			// private var _params:Object;			// public function LanguageEvent(aType:String, aParams:Object = null) {		public function LanguageEvent(aType:String, aLanguage:String) {			super(aType, false);			_language = aLanguage;		}				// access as variable (e.g. aEvent.language)		public function get language():String {			return _language;		}				// access via function (e.g. aEvent.getLanguage())		public function getLanguage():String {			return _language;		}				/**		* @inheritDoc		*/		public override function clone():Event {			return new LanguageEvent(type, _language);		}		/**		* @inheritDoc		*/		public override function toString():String {			var str = super.toString();			return formatToString("LanguageEvent","type", "target", "language");		}		// end class	}	// end package}