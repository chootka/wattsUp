package solarparks {		/*	*	Solar Parks	*	SolarButton generic button for SolarParks Interactive	*	*	@langversion ActionScript 3.0	*	@playerversion Flash 10.0	*	*	@author Sarah Grant	*	@since  02.2012	*/		import com.carlcalderon.arthropod.Debug;	import com.dixond.events.CustomEvent;	import com.greensock.*;	import com.greensock.easing.*;		import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;			public class SolarButton extends Sprite 	{		private var _id:String;		private var _xx:int;		private var _yy:int;		private var _img:DisplayObject;		private var _img2:DisplayObject;		//private var _tm:MLTextManager;		//private var _txt:MLTextField;		private var _button:Sprite;				public function SolarButton(id:String, xx:int, yy:int, img:DisplayObject, img2:DisplayObject) {//, tm:MLTextManager) {			_id = id;			_xx = xx;			_yy = yy;			_img = img;			_img2 = img2;			//_tm = tm;			this.addEventListener(Event.ADDED_TO_STAGE, _onAddedToStage, false, 0, true);		}				private function _onAddedToStage($e:Event) {			this.removeEventListener(Event.ADDED_TO_STAGE, _onAddedToStage);						_button = new Sprite();			_button.addChild(_img); // unpressed image			_img2.alpha = 0;			_button.addChild(_img2); // pressed image			//_txt = new MLTextField(-10, 57, 200, 120);			//_txt.selectable = false;			//_tm.setFieldContent(_txt, "button_"+_id, "stratNavButtonLabel");						//_button.addChild(_txt);			_button.addEventListener(MouseEvent.MOUSE_UP, _onMouseUp, false, 0, true);			_button.addEventListener(MouseEvent.MOUSE_DOWN, _onMouseDown, false, 0, true);						this.x = _xx;			this.y = _yy;			this.addChild(_button);		}				private function _onMouseDown($e:MouseEvent):void {			TweenLite.to(_img2, .16, {alpha:1});		}				private function _onMouseUp($e:MouseEvent):void {			TweenLite.to(_img2, .16, {alpha:0});			dispatchEvent( new CustomEvent("onMouseUp", {id:_id}) );		}				public function destroy():void {			if(_button) {				_button.removeEventListener(MouseEvent.MOUSE_DOWN, _onMouseDown);				_button.removeEventListener(MouseEvent.MOUSE_UP, _onMouseUp);				if(_img) _button.removeChild(_img);				if(_img2) _button.removeChild(_img2);				//if(_txt) _button.removeChild(_txt);				this.removeChild(_button);				_button = null;			}			//_txt = null;			_img = null;			_img2 = null;			_id = null;		}			} //end class}//end package