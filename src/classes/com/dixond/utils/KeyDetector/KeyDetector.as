package {	import flash.ui.Keyboard;	import flash.events.*;	import flash.display.Sprite;		/**	*   KeyDetector 	*	Just a utility that a outputs a string indicating the key pressed and it's keycode in a format to be copied in a class of constant declarations.	*	e.g. 'public static cont KEY:int = keycode;'	*		*	Used as the Document Class for an swf to be published via TestMovie so we get the output window from which we copy the results	*		* 	@langversion ActionScript 3	*	@playerversion Flash 9.0.0	*	*	@author D	*	@since  25.07.2007	*/	public class KeyDetector extends Sprite{		public function KeyDetector() {			stage.addEventListener(KeyboardEvent.KEY_DOWN, keyDownListener);		}				public function keyDownListener(aEvent:KeyboardEvent):void {			// don't output shift key presses			if (code == Keyboard.SHIFT) {return};			// assemble the output string			var code = aEvent.keyCode;			var ascii = aEvent.charCode;			var key = String.fromCharCode(ascii);			// for letters			// var str = "public static const " + key.toUpperCase() + "_KEY:int = " + code + ";";						// for punctuation			var str = "public static const " + key + "_KEY:int = " + code + ";";			trace(str); 		}		} // end class} // end package