package com.dixond.events{	import flash.events.Event;	/**	ToggleEvent has 3 types:	= ToggleEvent.TOGGLE - representing any click on a ToggleButton. Events of this type contain the selected state as a property	= ToggleEvent.TOGGLE_SELECT - representing a click that results in the selected state	= ToggleEvent.TOGGLE_DESELECT - representing a click that results in the deselected state	= This is like w MouseEvents, where you can listen for CLICK or MOUSE_UP/MOUSE_DOWN,so here can listen for TOGGLE or TOGGLE_SELECTED/TOGGLE_DESELECTED	*/	public class ToggleEvent extends Event {		public static  const TOGGLE_SELECT:String = "toggle_select";		public static  const TOGGLE_DESELECT:String = "toggle_deselect";		public static  const TOGGLE:String = "toggle";		private var _selected:Boolean;		//		public function ToggleEvent(aType:String, aSelected:Boolean) {			super(aType, true);			_selected = aSelected;		}		public function get selected():Boolean {			return _selected;		}		/**		* @inheritDoc		*/		public override function clone():Event {			return new ToggleEvent(type,_selected);		}		/**		* @inheritDoc		*/		public override function toString():String {			var str = super.toString();			// note this string does not include all the inherited Event properties that might be useful...			//return "[Event type=" + type + " selected=" + _selected + "]";			return formatToString("ToggleEvent","type","bubbles","cancelable","eventPhase","_selected");		}		// end class	}	// end package}