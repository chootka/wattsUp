package com.dixond.ia {	/*	*	IdleTimeout - Sends IDLE_TIMEOUT event when specified time passes with no mouse (or other optional input) events	*	*	@langversion ActionScript 3.0	*	@playerversion Flash 9.0	*	*	@author D	*	@since  04.09.2007	*/	import flash.utils.Timer;	import flash.events.*;		public class IdleTimeout extends EventDispatcher {		public static const IDLE_TIMEOUT:String = "idle_timeout";		private var _idleTimer:Timer;				/**		*	Note: This is listening for serial data events		*/		public function IdleTimeout(aIdleSeconds:int) {			// make a timer that continues indefinitely.			_idleTimer = new Timer(aIdleSeconds * 1000, 1);			_idleTimer.addEventListener(TimerEvent.TIMER, timerEventListener, false, 0, true);		}				private function timerEventListener(aEvent:TimerEvent){			//trace("IdleTimeout.timerEventListener()");			dispatchEvent(new Event(IdleTimeout.IDLE_TIMEOUT));		}		//--------------------------------------		//  public methods to start and stop the timer		//--------------------------------------				/**		*	adds this object to display list and starts the movie		*/		public function start() {			//trace("IdleTimeout.start()");			_idleTimer.start();		}				public function stop() {			//trace("IdleTimeout.stop()")			_idleTimer.stop();		}		public function reset() {			//trace("IdleTimeout.reset()");			// resetting the Timer object also stops it. Does not start it!			_idleTimer.reset();				_idleTimer.start();				}	} // end class}// end package