package com.dixond.ia{	/**	* Cursor - provides static methods to hide, show, and toggle cursor visibility	* Tracks the cursor's current visible status (unlike the built in Mouse object), which facilitates the toggling;	*	* @langversion ActionScript 3	* @playerversion Flash 9.0.0	*	* @author D	* @since  10.22.2007	*/	import flash.ui.Mouse;		public class Cursor {		private static var _visible:Boolean;				public static function show():void {			Mouse.show();			_visible = true;		}				public static function hide():void {			Mouse.hide();			_visible = false;		}				public static function toggle():void {			if (!_visible) { 				Cursor.show();			} else {				Cursor.hide();			}		}		public static function getVisible() {			return Cursor._visible;		}	}// end class}// end package